{
  "compilerOptions": {
    "declaration" : false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "removeComments": false,
    "sourceMap": true,
    "target": "ES5",
    "typeRoots": [
      "./node_modules/@types"
    ],
    "module": "commonjs",
    "noEmit": false,
    "noEmitOnError": true,
    "noImplicitAny": true,
    "noImplicitReturns": false,
    "noLib" : false,
    "preserveConstEnums": true,
    "project": "./"
  },
  "include": [
    "./script/src/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
