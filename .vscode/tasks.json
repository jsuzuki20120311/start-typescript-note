{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "0.1.0",
    "command": "sh",
    "isShellCommand": true,
    "showOutput": "always",
    "suppressTaskName": true,
    "args": ["-c"],
    "tasks": [
        {
            "taskName": "build",
            "args": ["npm -prefix ./chapter-4/client run build && npm -prefix ./chapter-4/server run build;"]
        },
        {
            "taskName": "build:product",
            "args": ["npm -prefix ./chapter-4/client run build-product && npm -prefix ./chapter-4/server run build;"]
        },
        {
            "taskName": "dev",
            "args": ["npm -prefix ./chapter-4/client run dev & npm -prefix ./chapter-4/server run dev;"]
        }
    ]
}
